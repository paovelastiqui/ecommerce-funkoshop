<%- include('../partials/header.ejs') %>
    
    <!--Login-->
    <div class="login">
        <h2 class="titulo">INGRESAR A MI CUENTA</h2>
        <form class="login__form" action="" method="">
            <div class="login__form__inputs">
                <div class="login__form__inputs__email">
                    <label for="email">Email:</label>
                    <input type="text" name="email" id="email" required />    
                </div>
                <div class="login__form__inputs__password">
                    <label for="password">Contraseña:</label>
                    <input type="password" name="password" id="password" required />    
                </div>  
            </div>
            <div class="login__form__buttons">
                <input class="boton-rojo" type="submit" value="Ingresar">
                <div class="login__form__buttons__record">
                    <input type="checkbox">
                    <p>Recordarme</p>    
                </div>
                    
            </div>
            <a href="">Olvidé mi contraseña</a>
        </form>
    </div>
    <!--Fin Login-->

<%- include('../partials/footer.ejs') %>